doctype html
html(lang="en")
  head
    title <%= _.slugify(appname) %>
    meta(charset='UTF-8')
    meta(content='', name='description')
    meta(content='', name='author')
    meta(content='3 days', name='revisit-after')

    // build:css /styles/main.css
    link(href='<%= _.slugify(root_path) %>/styles/main.css', rel='stylesheet')
    // endbuild

  body(class=page)
    header
      h1 Yeoman, Drink Your Fanta

    block content

    // Footer
    footer

    // build:js /scripts/main.js
    script(src='<%= _.slugify(root_path) %>/bower_components/jquery/dist/jquery.js')
    script(src='<%= _.slugify(root_path) %>/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='<%= _.slugify(root_path) %>/bower_components/seajs/sea.js')
    script(src='<%= _.slugify(root_path) %>/scripts/seajs-config.js')
    script(type="text/javascript").
      seajs.use('main', function(module){
      module.load()
      })
    // endbuild
